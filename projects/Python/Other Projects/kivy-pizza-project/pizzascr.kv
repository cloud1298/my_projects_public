#:import utils kivy.utils
#:set color1 "#DD7835"
#:set color2 "#D8D8D8"
#:set priceColor "#F8B400"


MainWidget:


<CoverImage@CoverBehavior+Image>:
    reference_size: self.texture_size

<MainWidget>:
    recycleView: recycleView

    CoverImage:
        source: "images/menu_background.jpg"

        canvas:
            Color:
                rgba: 0, 0, 0, .6
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'vertical'

        Image:
            source: 'images/small_logo.png'
            allow_stretch: True
            size_hint: None, None
            size: dp(150), dp(60)
            pos_hint: {'center_x': .5}

        TitleLabel:
            text: 'Our Pizzas'
        
        BoxLayout:
            padding: dp(25), dp(25)

            RecycleView:
                id: recycleView
                viewclass: 'PizzaWidget'
                RecycleBoxLayout:
                    default_size: None, dp(100)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(25)

        Label:
            text: root.error_str
            size_hint: 1, None
            height: dp(30) if len(root.error_str) > 0 else 0
            font_size: dp(12)
            bold: True
            canvas.before:
                Color:
                    rgb: 1, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size


<LeftAlignLabel@Label>:
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]
    halign: 'left'
    valign: 'top'

    canvas.before:
        Color:
            # rgb: utils.get_random_color()
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size


<FitLabel@Label>:
    size: self.texture_size
    size_hint: None, None


<OptionLabel@FitLabel>:
    bold: True
    font_size: dp(10)
    padding: dp(8), dp(3)


<TitleLabel@FitLabel>:
    font_size: dp(22)
    bold: True
    padding: dp(16), dp(3)

    canvas.before:
        Color:
            rgb: utils.get_color_from_hex(color1)
        Rectangle:
            pos: self.pos
            size: self.size


<BadgeVegetarian@OptionLabel>:
    color: 0, 0, 0, 1
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'images/badge_vegetarian.png'


<BadgeSpicy@OptionLabel>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'images/badge_spicy.png'
    

<PizzaWidget>:
    size_hint_y: None
    height: max(dp(100), self.minimum_height)

    BoxLayout:
        size_hint_max_x: dp(550)
        size_hint_min_x: dp(500)
        padding: [0, dp(10)]
        spacing: dp(5)

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(10)

                FitLabel:
                    text: root.name
                    font_size: dp(22)
                    bold: True    
                BadgeVegetarian:
                    text: "VEGETARIAN" if root.vegetarian else ""
                BadgeSpicy:
                    text: "SPICY" if root.spicy else ""

            LeftAlignLabel:
                text: root.ingredients
                color: utils.get_color_from_hex(color2)
                padding: [0, dp(8)]
            
        FitLabel:
            text: "$" + str(root.price)
            halign: 'right'
            valign: 'center'
            font_size: dp(20)
            color: utils.get_color_from_hex(priceColor)
            bold: True
            pos_hint: {'top': .9}
